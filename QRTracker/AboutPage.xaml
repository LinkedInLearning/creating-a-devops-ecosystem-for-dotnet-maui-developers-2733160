<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QRTracker.AboutPage"
             Title="AboutPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <HybridWebView x:Name="hwvAbout" Grid.Row="0" Grid.ColumnSpan="2" />
        <Button x:Name="btnAbout" BorderWidth="0" BackgroundColor="Transparent" Grid.Row="1" Grid.Column="0" Text="About" Clicked="btnAbout_Clicked" />
        <Button x:Name="btnEULA"  BorderWidth="0" BackgroundColor="Transparent" Grid.Row="1" Grid.Column="1" Text="EULA" Clicked="btnEULA_Clicked" />
    </Grid>
</ContentPage>